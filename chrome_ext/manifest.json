{
    "manifest_version": 3,
    "name": "ELTE LLM Text processor",
    "version": "1.0",
    "description": "Allows you to process text with LLM from your browser.",
    "permissions": ["activeTab", "contextMenus", "storage", "sidePanel"],
    "host_permissions": ["http://127.0.0.1:5000/*"],
    "background": {
      "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }