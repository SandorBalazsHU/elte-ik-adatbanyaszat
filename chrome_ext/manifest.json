{
    "manifest_version": 3,
    "name": "Text Selection Extension",
    "version": "1.0",
    "description": "Allows you to send selected text to a REST API and display the result.",
    "permissions": ["activeTab", "contextMenus"],
    "host_permissions": ["http://127.0.0.1:5000/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  